{
  "name": "my-project",
  "source": "./src/main.html",
  
  "scripts": {
    "start": "parcel",
    "build": "parcel build",
    "copy:assets": "cp -r assets/* dist",
    "copy:scss": "cp -r scss/* dist",
    "copy:html": "find src -name '*.html' -type f -exec cp {} dist \\;",
    "copy": "npm run copy:assets && npm run copy:html && npm run copy:scss"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.0.1",
    "parcel": "latest"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4"
  }
}
